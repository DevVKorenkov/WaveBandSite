@model IEnumerable<WaveBand.Web.Models.NewsModel>

<div class="container">
    <div class="col-6 text-right">
        <a asp-controller="News" asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> &nbsp; Create new post
        </a>
    </div>

    <br/><br/>

    @if (Model.Count() > 0)
    {
        <div class="col">
            @foreach (var n in Model)
            {
                <p>
                    @n.Created.ToShortDateString();
                </p>
                <p>
                    @n.Title;
                </p>
                <p>
                    @n.Body
                </p>
                <p>
                    @n.Author.Name @n.Author.LastName
                </p>
            }
        </div>
    }
    else
    {
        <p>
            There aren't any news
        </p>
    }
</div>
